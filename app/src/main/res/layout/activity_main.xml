<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timertextview_initstring"
        android:id="@+id/timerTextView"
        android:textSize="120sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starttimer_btn_str"
        android:id="@+id/starttimer_btn"
        android:layout_below="@+id/timerTextView"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timers_listview"
        android:layout_below="@+id/starttimer_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addTimer_btn_str"
        android:id="@+id/addTimer_btn"
        android:layout_above="@+id/timers_listview"
        android:layout_toLeftOf="@+id/starttimer_btn"
        android:layout_toStartOf="@+id/starttimer_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/cancel_btn"
        android:layout_above="@+id/timers_listview"
        android:layout_toRightOf="@+id/starttimer_btn"
        android:layout_toEndOf="@+id/starttimer_btn" />

</RelativeLayout>
